<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Food data</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="bg-primary text-white py-3">
    <div class="container">
      <h1 class="text-center">Foods Management</h1>
    </div>
  </header>
  
  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>List</h2>
      <a href="" class="btn btn-success">Add New</a>
    </div>
    <ul class="list-group">
      <% data.forEach(food => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <img src="<%= food.img %>" alt="<%= food.name %>" class="img-thumbnail me-3" style="width: 60px; height: 60px;">
            <div>
              <h5 class="mb-1"><%= food.name %></h5>
              <p class="mb-1">Price: $<%= food.price %></p>
              <p class="mb-1">Cate ID: <%= food.category_id %></p>
              <p class="mb-0">Address: <%= food.address %></p>
            </div>
          </div>
          <div class="d-flex gap-2">
            <a href="" class="btn btn-primary btn-sm">Edit</a>
            <a href="" class="btn btn-danger btn-sm">Delete</a>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
